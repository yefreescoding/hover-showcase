<style lang="scss">
  #info-card {
    --_height: auto;
    --_width: auto;
    --_translate: -200%;

    width: min(calc(100% - 1rem), var(--_width));
    height: var(--_height);
    transform: translateY(-20%);

    overflow: hidden;
    position: fixed;
    inset: 0;
    margin: auto;
    border: 1px solid #C8C8C8;
    box-shadow: 0 8px 16px hsl(0, 0%, 15%);

    background-color: #F1F2F4;
    border-radius: 1rem;

    transition: width 150ms, height 150ms linear, opacity 100ms;

    .scroller{
      display: flex;
      width: max-content;

      
      &__content {
        transform: translateX(var(--_translate));
        transition: transform 120ms ease-in-out;

        width: 100%;
        max-width: var(--_width);
        height: var(--_height);
        padding: .5rem;
        display: flex;
        gap: 1rem;
        color: #4D4F51;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: .5rem;
        }

        a {
          background: linear-gradient( #FEA373,  #fb8e54);
          color: #FEFEFE;
          padding: 6px;
          border-radius: 10px;
          border: 1px solid #DF935D;
          text-transform: capitalize;
          text-align: center;
          font-weight: 600;
        }
      }
    }

    opacity: 0.8;

    &:hover {
      opacity: 1;
    }

    &[data-state="article-1"]{
      --_height: 260px;
      --_width: 550px;
    }

    &[data-state="article-2"]{
      --_height: 386.2px;
      --_width: 550px;
    }
  
    &[data-state="article-3"]{
      --_height: 390px;
      --_width: 700px;
    }
    &[aria-hidden="false"]{
      display: none;
    }
  }

</style>